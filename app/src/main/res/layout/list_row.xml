    <ImageView
        android:id="@+id/thumbnail"
        android:background="@drawable/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/JobName"
            android:text="Title"
            android:textSize="@dimen/title"
            android:layout_width="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:textStyle="bold" />




        <TextView
            android:id="@+id/MoneyTitle"
            android:text="Offer:$"
            android:textSize="@dimen/rating"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_below="@id/JobName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/JobPay"
            android:text="200"
            android:textSize="@dimen/rating"
            android:layout_marginTop="1dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/JobName"
            android:layout_toRightOf="@+id/MoneyTitle"/>


        <TextView
            android:id="@+id/JobDate"
            android:text="posted on.."
            android:textStyle="italic"
            android:textColor="@color/year"
            android:textSize="@dimen/year"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/JobDescription"
            android:text="Job Description"
            android:visibility="invisible"
            android:textSize="1sp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/JobAddress"
            android:text="Job Address"
            android:textSize="19sp"
            android:visibility="invisible"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



